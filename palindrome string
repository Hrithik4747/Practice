Given a string S, check if it is palindrome or not.



class Solution{
public:	
	
	
	int isPalindrome(string S)
	{
	    // Your code goes here
	    int n = S.size();
	    
	    bool flag = true;
	    
	    for( int i = 0 ; i < n ; i++){
	        if( S[i] != S[n-1-i])
	        flag = false;
	    }
	    if( flag == true){
	        return 1;
	    }else return 0; 
	}

};
